/* Todo list */

.todo-list {
  display: flex;
  flex-direction: column;
  box-shadow: 0 2px 2px 0 rgba(0,0,0,.14),0 3px 1px -2px rgba(0,0,0,.2),0 1px 5px 0 rgba(0,0,0,.12);
  border-radius: 2px;
  width: 600px;
  background-color: white;



  /* todo-item */

  .todo-item {
    padding: 1em;
    display: flex;
    align-items: center;
    &:not(:first-child) {
      border-top: 1px solid rgba(0,0,0,.1);
    }

    .checkbox {
      margin-right: .25em;
    }
    .actions {
      margin-left: auto;
      opacity: 0;
      transition: all .2s;
      .open-todo{
        float: left;
        padding: 4px 4px 1px 4px;
        color: #757575;
        &:hover {
          background-color: rgba(158,158,158,0.2);
          border-radius: 50%;
          padding: 4px 4px 1px 4px;
        }
      }
    }

    &:hover .actions {
      opacity: 1;
    }

  }


  .todo-item-completed{
    .title {
      text-decoration: line-through;
    }
    .title,.material-icons {
      color: lightgray;
    }
  }
}


